curl -X PUT "localhost:9200/products" -H 'Content-Type: application/json' -d'
{
  "mappings": {
    "properties": {
      "name": { "type": "text" },
      "price": { "type": "integer" },
      "manufacturer": {
        "properties": {
          "name": { "type": "text" },
          "founded": { "type": "date", "format": "yyyy-MM-dd" },
          "country": {
            "properties": {
              "name": { "type": "text" },
              "language": { "type": "text" }
            }
          }
        }
      }
    }
  }
}
'
